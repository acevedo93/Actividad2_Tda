include index
.main.container
    .row
    .col-md-6.col-md-offset-3
        if courseData
            h1.display-4.m-b-2 Edita el curso
            form(method='POST' action='/courses/edit')
                div.form-group
                    label(for='name') Nombre del curso:
                    input#name.form-control(type='text', placeholder='Ingrese el nombre del curso' name='nombre' value=courseData.nombre)
                div.form-group
                    input#id.form-control(type='hidden', placeholder='Ingrese un Id numerico para el curso' name='id' value=courseData.id)
                div.form-group
                    label(for='description') Descripcion:
                    input#description.form-control(type='text', placeholder='Ingresa una descripcion' name='descripcion' value=courseData.descripcion)
                div.form-group
                    label(for='description') Valor:
                    input#description.form-control(type='text', placeholder='Ingresa el precio' name='valor' value=courseData.valor)
                div.form-group
                    label(for='Modalidad') Modalidad:
                    select#pw.form-control(type='password' name='modalidad' value=courseData.modalidad)
                        option(value="virtual") Virtual
                        option(value="presencial") Presencial
                div.form-group
                    label(for='IntensidadHoraria') Intensidad Horaria
                    input#IntensidadHoraria.form-control(type='number' placeholder="Ingresa la intensidad horaria en hrs" name='intensidadHoraria' value=courseData.intensidadHoraria)
                div.form-group
                    label(for='Modalidad') Estado:
                    select#pw.form-control(type='text' name='state' value=courseData.state)
                        option(value="disponible") disponible
                        option(value="cerrado") cerrado
            
                button.btn.btn-primary(type='submit') Guardar cambios
        else
            div El curso no fue encontrado